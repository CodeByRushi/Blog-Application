        <input type="radio" name="active" value="active" checked>
        <label>Active</label>
        <input type="radio"  name="active" value="inactive">
        <label>Inactive</label><br>
        <label>Enter Location:: </label><br>

        <label for="">Enter latitude </label>
        <input type="text" name="latitude"  value="<%= posts.location.latitude%>"><br>
        <label for="">Enter longitude </label>
        <input type="text" name="longitude" value="<%= posts.location.longitude%>"><br>

        <input type="submit" value="Update">
    </form>
</body>
